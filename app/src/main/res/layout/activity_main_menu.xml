<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/menu_title_color"
        android:textSize="55dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/startQuizButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/start_quiz_button_color"
        android:textColor="@color/button_text_color"
        android:text="Start Quiz" />

    <Button
        android:id="@+id/viewPastScoresButton"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/view_scores_button_color"
        android:textColor="@color/button_text_color"
        android:text="View Past Scores" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/logout_button_color"
        android:textColor="@color/button_text_color"
        android:text="Logout" />
</LinearLayout>